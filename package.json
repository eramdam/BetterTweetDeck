{
  "name": "BetterTweetDeck",
  "version": "3.9.16",
  "extension_version": "3.9.16",
  "description": "Adds some nice options on TweetDeck to provide a better experience on the webapp when used on Chrome.",
  "repository": {
    "type": "git",
    "url": "https://github.com/eramdam/BetterTweetDeck.git"
  },
  "author": "Damien Erambert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eramdam/BetterTweetDeck/issues"
  },
  "scripts": {
    "prerelease": "rimraf artifacts/*",
    "start": "cross-env NODE_ENV=development webpack --hide-modules --progress --watch --env.browser",
    "build": "cross-env NODE_ENV=development webpack --hide-modules --env.browser",
    "build:prod": "cross-env NODE_ENV=production webpack --hide-modules --env.browser",
    "run:firefox": "web-ext run -s dist",
    "lint": "eslint {src,tools,config}/**/*.js *.js",
    "test": "npm run lint",
    "release": "npm run build:prod -- chrome && npm run pack:chrome && npm run build:prod -- firefox && npm run pack:firefox",
    "pack:chrome": "cross-env NODE_ENV=development node tools/pack.js",
    "pack:firefox": "cross-env NODE_ENV=development web-ext build -s dist -a artifacts",
    "update_emojis": "node tools/update_emojis.js",
    "prepush": "npm run lint",
    "fix": "eslint --fix '**/*.{js,jsx}' && prettier --write '**/*.css'",
    "safari": "xcrun safari-web-extension-converter dist --project-location safari --copy-resources --swift --force --bundle-identifier me.erambert.bettertweetdeck"
  },
  "homepage": "https://github.com/eramdam/BetterTweetDeck",
  "dependencies": {
    "@types/dompurify": "^2.0.4",
    "@types/lodash": "^4.14.152",
    "apollo-fetch": "^0.7.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-env": "^1.6.1",
    "brace": "^0.11.1",
    "chalk": "^2.3.2",
    "clean-webpack-plugin": "^0.1.19",
    "clipboard": "^2.0.0",
    "config": "^1.30.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^5.1.4",
    "crx": "^5.0.1",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "del": "^3.0.0",
    "dompurify": "^2.1.1",
    "emoji-js": "3.4.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fecha": "^2.3.3",
    "file-saver": "^1.3.8",
    "generate-json-webpack-plugin": "^0.3.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.14",
    "lodash-webpack-plugin": "^0.11.4",
    "marked": "^0.7.0",
    "moduleraid": "^3.3.0",
    "mustache": "^2.3.0",
    "needle": "^2.2.0",
    "normalize.css": "^8.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.3",
    "postcss-nested": "^3.0.0",
    "postcss-url": "^7.3.2",
    "prismjs": "^1.13.0",
    "promise-each": "2.2.0",
    "query-string": "^6.0.0",
    "reuse-promise": "^2.0.0",
    "rimraf": "^2.6.2",
    "semver": "^5.6.0",
    "stringify-package": "^1.0.0",
    "style-loader": "^0.20.3",
    "web-ext": "^4.2.0",
    "webpack": "^4.5.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.10",
    "xml-js": "^1.6.2",
    "zip-webpack-plugin": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "6.6.0",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "eslint-plugin-unused-imports": "^0.1.2",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.10.0",
    "husky": "^0.14.3",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "ws": "^5.1.1"
  }
}